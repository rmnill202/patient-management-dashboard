generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Schema
model Provider {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Patient {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  lastUpdated DateTime @updatedAt
  firstName   String
  middleName  String?
  lastName    String
  dateOfBirth DateTime @db.Date
}

model Address {
  id              Int     @id @default(autoincrement())
  streetAddress   String
  secondaryStreet String?
  city            String
  state           USState
  zip             Int
}

